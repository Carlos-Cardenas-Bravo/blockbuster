<div id="<%= dom_id movie %>" class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <h2 class="title is-4"><%= movie.name %></h2>
        <%= link_to "Show this movie", movie_path(movie.id), class: "button is-light" %>
        <h3 class="subtitle is-6">Clientes que han arrendado:</h3>
        <p>
          <% if movie.clients.any? %>
            <% movie.clients.each do |client| %>
              <span class="tag is-info"><%= client.name %></span>
            <% end %>
          <% else %>
            <span>No hay clientes registrados.</span>
          <% end %>
        </p>
      </div>
    </div>
  </article>
</div>