<% content_for :title, "Movies" %>
<section class="section">
  <div class="container">

    <h1 class="title">Movies</h1>

    <div id="movies" class="mt-4">
      <% @movies.each do |movie| %>
        <%= render movie %>
        <p>
          <%= link_to "Show this movie", movie %>
        </p>
      <% end %>
    </div>

    <%= link_to "New movie", new_movie_path %>
  </div>
</section>