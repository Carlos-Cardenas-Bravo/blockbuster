<% content_for :title, "Movies" %>
<section class="section">
  <div class="container">

    <h1 class="title">Movies</h1>

    <div id="movies" class="mt-4">
      <% @movies.each do |movie| %>
        <%= render movie %>
      <% end %>
    </div>
    <%= link_to "New movie", new_movie_path, class: "button is-primary" %>
  </div>
</section>

<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
