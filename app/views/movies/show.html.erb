<section class="section">
  <div class="container">

    <%= render @movie %>

    <div class="mt-4">
      <div class="buttons">
        <%= link_to "Edit this movie", edit_movie_path(@movie), class: "button is-warning" %>
        <%= link_to "Back to movies", movies_path, class: "button is-light" %>
        <%= button_to "Destroy this movie", @movie, method: :delete, class: "button is-danger" %>
      </div>
    </div>
  </div>
</section>
